{
  "env": {
      "browser": true,
      "es2021": true,
      "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
  },
  "rules": {
    "consistent-return": 2,
    "indent"           : [1, 2],
    "no-else-return"   : 1,
    "semi"             : [2, "always"],
    "space-unary-ops"  : 2
  }
}
